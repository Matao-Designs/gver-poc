{% macro money(label, name, helperText) %}
  <div class="sprk-b-InputContainer" data-sprk-input="monetary">
    <div class="sprk-b-TextInputIconContainer sprk-b-TextInputIconContainer--has-text-icon">
      <label class="sprk-b-Label sprk-b-Label--monetary" for="{{ name }}-monetary-normal">{{ label }}</label>
      <input aria-describedby="{{ name }}-monetary-normal--error-container" class="sprk-b-TextInput sprk-b-TextInput--has-text-icon sprk-u-Width-100" data-id="{{ name }}-monetary-normal" id="{{ name }}-monetary-normal" pattern="(^\$?(\d+|\d{1,3}(,\d{3})*)(\.\d+)?$)|^$" type="tel">
    </div>
    {% if helperText %}<div class="sprk-b-HelperText">{{ helperText }}</div>{% endif %}
    <div class="sprk-b-ErrorContainer" id="{{ name }}-monetary-normal--error-container"></div>
  </div>
{% endmacro %}

{% macro phone(label, name, helperText) %}
  <div class="sprk-b-InputContainer" data-sprk-input="phone">
    <label class="sprk-b-Label" for="{{ name }}-phone-input-normal">{{ label }}</label>
    <input aria-describedby="{{ name }}-phone-input-normal--error-container" class="sprk-b-TextInput sprk-u-Width-100" data-id="{{ name }}-phone-input-normal" id="{{ name }}-phone-input-normal" pattern="(^(\+\d{1,2}\s)?((\(\d{3}\))|\d{3})[\s.-]?\d{3}[\s.-]?\d{4}$)|^$" placeholder="(000) 000-0000" type="tel">
    {% if helperText %}<div class="sprk-b-HelperText">{{ helperText }}</div>{% endif %}
    <div class="sprk-b-ErrorContainer" id="{{ name }}-phone-input-normal--error-container"></div>
  </div>
{% endmacro %}

{% macro radio(label, name, groupOptions, helperText) %}
  <div class="sprk-b-InputContainer">
    <fieldset class="sprk-b-Fieldset">
      <legend class="sprk-b-Legend">
        <label class="sprk-b-Label">{{ label }}</label>
      </legend>

      {% for key, option in groupOptions %}
        <div class="sprk-b-SelectionContainer">
          <input aria-describedby="{{ name }}-radio-normal--error-container" data-id="{{ name }}-radio-normal-{{ loop.index }}" id="{{ name }}-radio-normal-{{ loop.index }}" name="{{ name }}" type="radio">
          <label class="sprk-b-Label sprk-b-Label--inline" for="{{ name }}-radio-normal-{{ loop.index }}">{{ option.label }}</label>
        </div>
      {% endfor %}
    </fieldset>
    {% if helperText %}<div class="sprk-b-HelperText">{{ helperText }}</div>{% endif %}
    <div class="sprk-b-ErrorContainer" id="{{ name }}-radio-normal--error-container"></div>
  </div>
{% endmacro %}

{% macro text(label, name, type = 'text', helperText) %}
  <div class="sprk-b-InputContainer">
    <label class="sprk-b-Label" for="{{ name }}-text-input-normal">{{ label }}</label>
    <input aria-describedby="{{ name }}-text-input-normal--error-container" class="sprk-b-TextInput sprk-u-Width-100" data-id="{{ name }}-text-input-normal" id="{{ name }}-text-input-normal" type="{{ type }}">
    {% if helperText %}<div class="sprk-b-HelperText">{{ helperText }}</div>{% endif %}
    <div class="sprk-b-ErrorContainer" id="{{ name }}-text-input-normal--error-container"></div>
  </div>
{% endmacro %}
